@model lebonanimal.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buy</h1>

<h4>Product @Html.DisplayFor(model => model.CategoryId) @Html.DisplayFor(model => model.UserId) @Html.DisplayFor(model => model.Title)</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Buy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <img src="~/files/photos/@Html.DisplayFor(model => model.ImgPath)" class="card-img-top h-100 " alt="image @Html.DisplayFor(model => model.Title)" />
            </div>
            <div class="form-group">
                <p>@Html.DisplayFor(model => model.Description) </p>
            </div>
            <div class="form-group">
                <p>@Html.DisplayFor(model => model.Certificat) </p>
            </div>
            <div class="form-group">
                <p>@Html.DisplayFor(model => model.Price) €</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Acheter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
